@inherits LayoutComponentBase

<div class="flex h-screen bg-page">
    <!-- Sidebar -->
    <NavMenu />

    <!-- Main content -->
    <div class="flex-1 flex flex-col">
        <!-- Topbar -->
        <header class="bg-white shadow px-6 py-4 flex justify-end items-center gap-4">
            <AuthorizeView>
                <Authorized>
                    <!-- Configuración -->
                    <button title="Settings" class="text-gray-400 hover:text-blue-600 transition">
                        <span class="material-symbols-outlined text-xl">settings</span>
                    </button>

                    <!-- Avatar -->
                    <div class="w-8 h-8 rounded-full overflow-hidden border border-gray-300">
                        <img src="images/avatar-placeholder.png" alt="User Avatar" class="w-full h-full object-cover" />
                    </div>

                    <!-- Logout Button -->
                    <a href="account/identity/logout"
                       class="text-sm bg-red-50 text-red-600 hover:bg-red-100 px-3 py-1.5 rounded-md transition font-medium">
                        Logout
                    </a>
                </Authorized>
            </AuthorizeView>
        </header>

        <!-- Page content -->
        <main class="p-7 lg:p-10 overflow-auto">
            @Body
        </main>
    </div>
</div>
